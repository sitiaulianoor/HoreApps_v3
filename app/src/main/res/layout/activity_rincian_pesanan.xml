<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/orange"
        app:layout_scrollFlags="scroll|enterAlways"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rectangle_border">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/orange">
                    <TextView
                        android:id="@+id/textViewTglSewa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Sewa"
                        android:textSize="16dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" - "
                        android:textSize="16dp" />
                    <TextView
                        android:id="@+id/textViewTglKembali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Kembali"
                        android:textSize="16dp" />
                </LinearLayout>
                <TextView
                    android:id="@+id/textViewTipeKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipe Tempat "
                    android:textSize="15dp"
                    android:textColor="@color/orange"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="16dp"></TextView>
                <TextView
                    android:id="@+id/textViewNamaRentalKendaraan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rental Tempat"
                    android:textSize="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icCheckListDenganSupir"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_checklist"/>
                    <TextView
                        android:text="Dengan Locker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/abu_tua"
                        android:id="@+id/textViewDenganSupir"/>
                    <ImageView
                        android:id="@+id/icCheckListTanpaSupir"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_checklist_false"/>
                    <TextView
                        android:text="Tanpa Locker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/abu_tua"
                        android:id="@+id/textViewTanpaSupir"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/icCheckListDenganBBM"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_checklist"/>
                    <TextView
                        android:text="Dengan Makanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/abu_tua"
                        android:id="@+id/textViewDenganBBM"/>
                    <ImageView
                        android:id="@+id/icCheckListTanpaBBM"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_checklist_false"/>
                    <TextView
                        android:text="Tanpa Makanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/abu_tua"
                        android:id="@+id/textViewTanpaBBM"/>
                </LinearLayout>
                <View
                    android:id="@+id/pembatas1"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@id/txtViewBBMFalse"
                    android:layout_marginTop="5dp"
                    android:background="@color/orange" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informasi Pemesanan"
                    android:textSize="16dp"
                    android:textColor="@color/orange"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="15dp"></TextView>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_geofence"/>
                    <TextView
                        android:text="Area Pemakaian"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/abu_tua"
                        android:id="@+id/textViewAreaPemakaian"/>
                </LinearLayout>
                <View
                    android:id="@+id/pembatas2"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@id/txtViewBBMFalse"
                    android:layout_marginTop="5dp"
                    android:background="@color/orange" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2.4"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:text="Harga Sewa"
                        android:textSize="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:weightSum="1.3"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewHargaSewaKendaraan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Rp.3.300.000"
                            android:textColor="@color/abu_tua"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text=" / "
                            android:textColor="@color/abu_tua"
                            android:textSize="16dp"/>
                        <TextView
                            android:id="@+id/textViewLamaPenyewaan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.1"
                            android:text=" 12 jam"
                            android:textColor="@color/abu_tua"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.31"
                        android:text="Jumlah Sewa Lapangan"
                        android:textSize="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:weightSum="0.7"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewJumlahKendaraan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="right"
                            android:text="1"
                            android:textColor="@color/abu_tua"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text=" Buah"
                            android:gravity="right"
                            android:textColor="@color/abu_tua"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:text="Lama Penyewaan"
                        android:textSize="16dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:weightSum="0.7"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/textViewLamaSewaPemesanan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:layout_gravity="right"
                            android:text="1"
                            android:textColor="@color/abu_tua"
                            android:textSize="16dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:text=" Hari"
                            android:gravity="right"
                            android:textColor="@color/abu_tua"
                            android:textSize="16dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:weightSum="2.4"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.4"
                        android:text="Total Pembayaran"
                        android:textSize="20dp" />
                    <TextView
                        android:id="@+id/txtViewTotalPembayaran"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="total"
                        android:textColor="@color/abu_tua"
                        android:textSize="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp">
                <Button
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text="Lanjutkan"
                    android:id="@+id/btnLanjutkan"
                    android:background="@drawable/round_button"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:padding="5dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_weight="0.1">
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
